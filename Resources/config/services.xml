<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="clarity_images.form_type.image_crop.class">Clarity\ImagesBundle\Form\Type\ImageCropType</parameter>
        <parameter key="clarity_images.form_subscriber.image_crop.class">Clarity\ImagesBundle\Form\Event\ImageCropSubscriber</parameter>
    </parameters>

    <services>
        <service id="clarity_images.form_type.image_crop" class="%clarity_images.form_type.image_crop.class%">
            <argument type="service" id="clarity_images.form_subscriber.image_crop" />
            <tag name="form.type" alias="image_crop" />
        </service>
        <service id="clarity_images.form_subscriber.image_crop" public="false" class="%clarity_images.form_subscriber.image_crop.class%">
            <argument type="service" id="service_container" />
        </service>
    </services>
    
</container>
