<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="clarity_images.form_type.image_upload.class">Clarity\ImagesBundle\Form\Type\ImageUploadType</parameter>
        <parameter key="clarity_images.form_subscriber.image_upload.class">Clarity\ImagesBundle\Form\Event\ImageUploadSubscriber</parameter>
        <parameter key="clarity_images.form.strategy.simple_upload.class">Clarity\ImagesBundle\Form\Strategy\SimpleUploadStrategy</parameter>
        <parameter key="clarity_images.form_type.image_crop.class">Clarity\ImagesBundle\Form\Type\ImageCropType</parameter>
        <parameter key="clarity_images.form_subscriber.image_crop.class">Clarity\ImagesBundle\Form\Event\ImageCropSubscriber</parameter>
        <parameter key="clarity_images.form.strategy.simple_crop.class">Clarity\ImagesBundle\Form\Strategy\SimpleCropStrategy</parameter>
        <parameter key="clarity_images.image.manipulator.class">Clarity\ImagesBundle\Image\Manipulator</parameter>
    </parameters>

    <services>

        <!-- image upload -->
        <service id="clarity_images.form_type.image_upload" class="%clarity_images.form_type.image_upload.class%">
            <argument type="service" id="clarity_images.form_subscriber.image_upload" />
            <tag name="form.type" alias="image_upload" />
        </service>
        <service id="clarity_images.form_subscriber.image_upload" public="false" class="%clarity_images.form_subscriber.image_upload.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="clarity_images.form.strategy.simple_upload" class="%clarity_images.form.strategy.simple_upload.class%">
            <argument>%kernel.root_dir%/../web</argument>
        </service>

        <!-- image crop  -->
        <service id="clarity_images.form_type.image_crop" class="%clarity_images.form_type.image_crop.class%">
            <argument type="service" id="clarity_images.form_subscriber.image_crop" />
            <tag name="form.type" alias="image_crop" />
        </service>
        <service id="clarity_images.form_subscriber.image_crop" public="false" class="%clarity_images.form_subscriber.image_crop.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="clarity_images.form.strategy.simple_crop" class="%clarity_images.form.strategy.simple_crop.class%">
            <argument type="service" id="clarity_images.image.manipulator" />
            <argument>%kernel.root_dir%/../web</argument>
        </service>

        <!-- image manipulator -->
        <service id="clarity_images.image.manipulator" class="%clarity_images.image.manipulator.class%" />
    </services>
    
</container>
